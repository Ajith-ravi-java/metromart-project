package com.Ecommerce.site.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.RequestBody;

import com.Ecommerce.site.entity.Address;
import com.Ecommerce.site.repo.AddressRepo;

@Service
public class AddressService {
	
	@Autowired
	private AddressRepo addressrepo;
	
	public Address addAddress(@RequestBody Address add) {
		return addressrepo.save(add);
	}
	
	public List<Address> listOdAddress(){

		return addressrepo.findAll();
		
	}
	
}
